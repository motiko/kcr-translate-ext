{
  "version": "0.2.3",
  "name": "Kindle Cloud Reader Translate",
  "short_name": "KCR Translate",
  "manifest_version": 2,
  "description": "Translate directly from kindle cloud reader",
  "author": "Moti Korets",
  "key": "",
  "web_accessible_resources": ["ocr.html"],
  "icons": {
    "16": "img/book_16.png",
    "128": "img/book_128.png"
  },
  "page_action": {
    "default_icon": "img/book_16.png",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://translate.google.com/*"],
      "js": ["autoplay.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://lesen.amazon.de/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://leer.amazon.es/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://leer.amazon.com.mx/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://read.amazon.ca/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://read.amazon.com/*"],
      "js": ["index.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://read.amazon.co.jp/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://read.amazon.in/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://read.amazon.com.au/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://ler.amazon.com.br/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://lire.amazon.fr/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://leggi.amazon.it/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://read.amazon.co.uk/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "<all_urls>"
  ]
}
