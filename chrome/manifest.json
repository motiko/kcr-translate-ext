{
  "version": "0.0.12",
  "name": "Kindle Cloud Reader Translate",
  "short_name": "KCR Translate",
  "manifest_version": 2,
  "description": "Translate directly from kindle cloud reader",
  "author": "Moti Korets",
  "content_security_policy": "default-src 'self'; script-src 'self';",
  "key": "",
  "icons": {
    "16": "img/book_16.png",
    "128": "img/book_128.png"
  },
  "page_action": {
    "default_icon": "img/book_16.png",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://read.amazon.com/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://read.amazon.ca/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://lesen.amazon.de/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://read.amazon.com/",
      "https://read.amazon.ca/",
      "https://lesen.amazon.de/"
    ]
  },
  "permissions": [
    "https://read.amazon.com/",
    "https://read.amazon.ca/",
    "https://lesen.amazon.de/",
    "storage",
    "activeTab"
  ]
}
